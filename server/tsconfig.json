{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": false,
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ESNext",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules"],
}